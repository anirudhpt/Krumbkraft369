@import "tailwindcss";

:root {
  --background: linear-gradient(135deg, #F8F6F0 0%, #EDE6D6 50%, #E5D5C3 100%);
  --foreground: #3C2E26;
  --glass-bg: rgba(60, 46, 38, 0.08);
  --glass-border: rgba(92, 66, 50, 0.12);
}

/* Input glass effects */
.input-glass {
  background: rgba(240, 230, 210, 0.1);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(92, 66, 50, 0.2);
  color: #3C2E26;
  transition: all 0.2s ease;
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: linear-gradient(135deg, #2C1810 0%, #3C2E26 50%, #4A3A2E 100%);
    --foreground: #F0E6D2;
    --glass-bg: rgba(240, 230, 210, 0.06);
    --glass-border: rgba(205, 180, 155, 0.12);
  }
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  min-height: 100vh;
  overflow-x: hidden;
}

/* Glassmorphism utility classes */
.glass {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  box-shadow: 0 8px 32px var(--glass-shadow);
}

.glass-strong {
  background: rgba(60, 46, 38, 0.12);
  backdrop-filter: blur(25px);
  -webkit-backdrop-filter: blur(25px);
  border: 1px solid rgba(92, 66, 50, 0.25);
  box-shadow: 0 12px 40px rgba(60, 46, 38, 0.2);
}

.glass-subtle {
  background: rgba(240, 230, 210, 0.04);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(205, 180, 155, 0.08);
  box-shadow: 0 4px 24px rgba(60, 46, 38, 0.06);
}

.glass-dark {
  background: rgba(60, 46, 38, 0.08);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(92, 66, 50, 0.12);
  box-shadow: 0 8px 32px rgba(60, 46, 38, 0.15);
}

/* Animated gradient background */
.gradient-bg {
  background: linear-gradient(-45deg, #F8F6F0, #EDE6D6, #E5D5C3, #DCC9B0, #D4BFA6);
  background-size: 400% 400%;
  animation: gradientShift 8s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  25% { background-position: 100% 25%; }
  50% { background-position: 100% 75%; }
  75% { background-position: 0% 75%; }
  100% { background-position: 0% 50%; }
}

/* Floating particles effect */
.particles {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
}

.particle {
  position: absolute;
  background: rgba(60, 46, 38, 0.06);
  border-radius: 50%;
  animation: float 12s infinite linear;
}

@keyframes float {
  0% {
    transform: translateY(100vh) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.6;
  }
  90% {
    opacity: 0.6;
  }
  100% {
    transform: translateY(-100px) rotate(360deg);
    opacity: 0;
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10px;
  backdrop-filter: blur(10px);
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.4);
}

/* Button glass effects */
.btn-glass {
  background: rgba(240, 230, 210, 0.15);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(92, 66, 50, 0.2);
  transition: all 0.15s ease;
  box-shadow: 0 3px 12px rgba(60, 46, 38, 0.08);
  color: #3C2E26;
}

.btn-glass:hover {
  background: rgba(240, 230, 210, 0.2);
  transform: translateY(-1px);
  box-shadow: 0 6px 18px rgba(60, 46, 38, 0.12);
}

.btn-glass-primary {
  background: linear-gradient(135deg, rgba(160, 133, 91, 0.25), rgba(112, 74, 50, 0.25));
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(92, 66, 50, 0.2);
  color: #F0E6D2;
  transition: all 0.15s ease;
}

.btn-glass-primary:hover {
  background: linear-gradient(135deg, rgba(160, 133, 91, 0.35), rgba(112, 74, 50, 0.35));
  transform: translateY(-1px);
  box-shadow: 0 6px 18px rgba(160, 133, 91, 0.2);
}

.btn-glass-success {
  background: linear-gradient(135deg, rgba(143, 122, 86, 0.25), rgba(160, 133, 91, 0.25));
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(92, 66, 50, 0.2);
  color: #F0E6D2;
  transition: all 0.15s ease;
}

.btn-glass-success:hover {
  background: linear-gradient(135deg, rgba(143, 122, 86, 0.35), rgba(160, 133, 91, 0.35));
  transform: translateY(-1px);
  box-shadow: 0 6px 18px rgba(143, 122, 86, 0.2);
}

/* Card glass effects */
.card-glass {
  background: rgba(240, 230, 210, 0.1);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(160, 82, 45, 0.2);
  box-shadow: 0 8px 32px rgba(139, 69, 19, 0.1);
  transition: all 0.2s ease;
}

.card-glass:hover {
  background: rgba(240, 230, 210, 0.15);
  border: 1px solid rgba(160, 82, 45, 0.3);
  transform: translateY(-4px);
  box-shadow: 0 16px 48px rgba(139, 69, 19, 0.15);
}

/* Input glass effects */
.input-glass {
  background: rgba(245, 222, 179, 0.1);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(160, 82, 45, 0.2);
  color: #654321;
  transition: all 0.3s ease;
}

.input-glass:focus {
  background: rgba(245, 222, 179, 0.15);
  border: 1px solid rgba(160, 82, 45, 0.4);
  outline: none;
  box-shadow: 0 0 20px rgba(205, 133, 63, 0.1);
}

.input-glass::placeholder {
  color: rgba(101, 67, 33, 0.6);
}

/* Text utilities for glass theme */
.text-glass {
  color: rgba(60, 46, 38, 0.9);
}

.text-glass-muted {
  color: rgba(92, 66, 50, 0.7);
}

.text-glass-subtle {
  color: rgba(112, 74, 50, 0.5);
}

/* Custom utility for text truncation */
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Glow effects */
.glow {
  box-shadow: 0 0 20px rgba(205, 133, 63, 0.2);
}

.glow-primary {
  box-shadow: 0 0 30px rgba(160, 82, 45, 0.4);
}

.glow-success {
  box-shadow: 0 0 30px rgba(184, 134, 11, 0.4);
}

/* Breadboard and Bakery Styles */
.breadboard {
  background: 
    /* Subtle wood grain pattern */
    linear-gradient(90deg, 
      rgba(92, 66, 50, 0.06) 0%, transparent 1%, 
      transparent 12%, rgba(80, 58, 44, 0.04) 12%, transparent 13%,
      transparent 25%, rgba(92, 66, 50, 0.08) 25%, transparent 26%,
      transparent 38%, rgba(70, 52, 40, 0.05) 38%, transparent 39%,
      transparent 50%, rgba(92, 66, 50, 0.07) 50%, transparent 51%,
      transparent 63%, rgba(80, 58, 44, 0.06) 63%, transparent 64%,
      transparent 75%, rgba(92, 66, 50, 0.05) 75%, transparent 76%,
      transparent 88%, rgba(70, 52, 40, 0.04) 88%, transparent 89%
    ),
    /* Natural wood base color */
    linear-gradient(135deg, 
      #A0855B 0%,
      #B8956C 15%,
      #C8A373 30%,
      #B8956C 45%,
      #A0855B 60%,
      #8F7A56 75%,
      #B8956C 90%,
      #A0855B 100%
    );
  border: 2px solid #704A32;
  border-radius: 12px 12px 6px 6px;
  position: relative;
  box-shadow: 
    inset 0 1px 4px rgba(112, 74, 50, 0.2),
    inset 0 -1px 2px rgba(70, 52, 40, 0.15),
    0 6px 16px rgba(60, 46, 38, 0.25),
    0 2px 4px rgba(92, 66, 50, 0.2);
  overflow: visible;
  margin-top: 24px;
  min-height: 340px;
}

/* Create the handle */
.breadboard::before {
  content: '';
  position: absolute;
  top: -24px;
  left: 50%;
  transform: translateX(-50%);
  width: 36px;
  height: 28px;
  background: 
    linear-gradient(135deg, 
      #A0855B 0%,
      #B8956C 30%,
      #C8A373 60%,
      #B8956C 100%
    );
  border: 2px solid #704A32;
  border-radius: 8px 8px 0 0;
  box-shadow: 
    inset 0 1px 2px rgba(112, 74, 50, 0.2),
    0 2px 4px rgba(60, 46, 38, 0.3);
}

/* Handle hole */
.breadboard::after {
  content: '';
  position: absolute;
  top: -14px;
  left: 50%;
  transform: translateX(-50%);
  width: 7px;
  height: 7px;
  background: #3C2E26;
  border-radius: 50%;
  box-shadow: 
    inset 0 1px 1px rgba(0, 0, 0, 0.4),
    0 0 2px rgba(255, 255, 255, 0.1);
  z-index: 10;
}

/* Wood grain texture overlay */
.breadboard .bread-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    /* Horizontal wood grain lines matching the image */
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 4px,
      rgba(139, 69, 19, 0.06) 4px,
      rgba(139, 69, 19, 0.06) 5px,
      transparent 5px,
      transparent 8px,
      rgba(160, 82, 45, 0.08) 8px,
      rgba(160, 82, 45, 0.08) 9px,
      transparent 9px,
      transparent 16px,
      rgba(139, 69, 19, 0.05) 16px,
      rgba(139, 69, 19, 0.05) 17px
    );
  pointer-events: none;
  z-index: 1;
}

.bread-card {
  background: 
    linear-gradient(135deg, 
      rgba(255, 255, 255, 0.97) 0%, 
      rgba(252, 250, 247, 0.94) 25%, 
      rgba(248, 245, 240, 0.96) 50%, 
      rgba(252, 250, 247, 0.94) 75%, 
      rgba(255, 255, 255, 0.97) 100%
    );
  border: 1px solid rgba(92, 66, 50, 0.15);
  border-radius: 8px;
  box-shadow: 
    0 2px 8px rgba(60, 46, 38, 0.12),
    inset 0 1px 1px rgba(255, 255, 255, 0.9),
    inset 0 -1px 0px rgba(205, 180, 155, 0.06);
  transition: all 0.15s ease;
  position: relative;
  overflow: hidden;
  z-index: 2;
  margin: 4px;
  min-height: 320px;
}

.bread-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  height: 0;
  z-index: 3;
}

.bread-card:hover {
  transform: translateY(-1px) scale(1.001);
  box-shadow: 
    0 4px 12px rgba(60, 46, 38, 0.18),
    inset 0 1px 2px rgba(255, 255, 255, 0.95),
    inset 0 -1px 1px rgba(205, 180, 155, 0.08);
  border-color: rgba(92, 66, 50, 0.25);
}

.bread-title {
  color: #2A1F1A;
  text-shadow: 0.5px 0.5px 1px rgba(255, 255, 255, 0.7);
  font-weight: 700;
  letter-spacing: -0.5px;
}

.bread-description {
  color: #5C4232;
  text-shadow: 0.25px 0.25px 0.5px rgba(255, 255, 255, 0.5);
  line-height: 1.6;
  font-weight: 400;
}

.bread-price {
  color: #704A32;
  text-shadow: 0.5px 0.5px 1px rgba(60, 46, 38, 0.2);
  font-weight: 800;
  letter-spacing: -1px;
}

.bread-category {
  background: linear-gradient(135deg, #F5F1EB 0%, #E8DDD0 100%);
  color: #8B7355;
  border: 1px solid #D4C4B0;
  font-weight: 400;
  text-shadow: none;
  letter-spacing: 0.25px;
  text-transform: uppercase;
  font-size: 0.65rem;
  opacity: 0.85;
  box-shadow: 0 1px 3px rgba(139, 115, 85, 0.1);
  backdrop-filter: blur(2px);
  transition: all 0.15s ease;
}

.bread-category:hover {
  opacity: 1;
  background: linear-gradient(135deg, #F8F4EE 0%, #EBE0D3 100%);
  border-color: #C7B59F;
  transform: translateY(-1px);
  box-shadow: 0 2px 6px rgba(139, 115, 85, 0.15);
}

.bread-button {
  background: linear-gradient(135deg, #8F7A56 0%, #A0855B 50%, #8F7A56 100%);
  border: 1px solid #5C4232;
  color: #FFFFFF;
  font-weight: 600;
  text-shadow: 0.5px 0.5px 1px rgba(60, 46, 38, 0.8);
  box-shadow: 0 3px 8px rgba(60, 46, 38, 0.3);
  transition: all 0.15s ease;
  letter-spacing: 0.3px;
}

.bread-button:hover {
  background: linear-gradient(135deg, #A0855B 0%, #B8956C 50%, #A0855B 100%);
  transform: translateY(-1px);
  box-shadow: 0 5px 12px rgba(60, 46, 38, 0.4);
}

/* Bread Image Styling */
.bread-image-container {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #F8F6F0, #EDE6D6);
  border: 2px solid rgba(92, 66, 50, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 4px 12px rgba(60, 46, 38, 0.15),
    inset 0 1px 2px rgba(255, 255, 255, 0.8);
  transition: all 0.15s ease;
}

.bread-image-container:hover {
  transform: scale(1.05);
  box-shadow: 
    0 6px 16px rgba(60, 46, 38, 0.2),
    inset 0 1px 3px rgba(255, 255, 255, 0.9);
}

.bread-image-emoji {
  font-size: 2.5rem;
  filter: drop-shadow(1px 1px 2px rgba(60, 46, 38, 0.2));
  transition: transform 0.15s ease;
}

.bread-image-container:hover .bread-image-emoji {
  transform: scale(1.1);
}

/* Regular Item Image Styling */
.regular-image-container {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, rgba(240, 230, 210, 0.3), rgba(229, 213, 195, 0.3));
  border: 1px solid rgba(92, 66, 50, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 2px 8px rgba(60, 46, 38, 0.1),
    inset 0 1px 1px rgba(255, 255, 255, 0.6);
  transition: all 0.15s ease;
}

.regular-image-container:hover {
  transform: scale(1.05);
  box-shadow: 
    0 4px 12px rgba(60, 46, 38, 0.15),
    inset 0 1px 2px rgba(255, 255, 255, 0.8);
}

.regular-image-emoji {
  font-size: 1.8rem;
  filter: drop-shadow(0.5px 0.5px 1px rgba(60, 46, 38, 0.15));
  transition: transform 0.15s ease;
}

.regular-image-container:hover .regular-image-emoji {
  transform: scale(1.1);
}

/* Bakery color theme for general elements */
.bakery-warm {
  background: linear-gradient(135deg, #F5DEB3, #DEB887, #D2B48C);
}

.bakery-text {
  color: #8B4513;
}

.bakery-border {
  border-color: #CD853F;
}
